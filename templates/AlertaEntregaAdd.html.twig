{% extends "layout.html.twig" %}

{% block title %}Alerta Add{% endblock %}
{% block body %}
	<div class="container" >
            <form  id="form" name="form" action='ALERTA_Controller.php'  method='post'   enctype="multipart/form-data">
                <div class="form-group" >
                    <label class="control-label" >{{ strings['Añadir Alerta'] }}</label><br>
                </div>

                <div class="form-group">
                    <label class="control-label" >{{ strings['descripcionAlerta'] }}</label><br>
                    <textarea rows="8" cols="70" name="descripcionAlerta" readonly="true"> {{ datos['asuntoEntrega'] }}</textarea>             
                </div>
				
				<div class="form-group">
                    <input type="hidden" id="curso" name="curso" type="int" readonly="true" value="{{ datos['idCurso'] }}">
                </div>
				
				<div class="form-group">
                    <input type="hidden" id="fecha" name="fecha" type="date" readonly="true" value="{{ datos['dia'] }}">
                </div>

                <div class="form-group">
                    <input type="hidden" id="hora" name="hora" type="time" readonly="true" value="{{ datos['horaInicio'] }}">
                </div>
				
				<div class="form-group">
                    <input type="hidden" id="username" name="username" size="25" type="text" required="true" value='usuario'/>
                </div>
				
				<h4><b>{{ strings['Aviso'] }}</b></h4>
				
				<div class="form-group">
                    <label class="control-label" >{{ strings['Dias'] }}*</label><br>
                    <input class="form" id="dias" name="dias" type="text" required="true"/>
                </div>
				
                <input type='submit' onclick="return valida_envia_ALERTA()" name='accion'  value="{{ strings['Añadir'] }}">
                <a class="form-link" href="{{ volver }}">{{ strings['Volver'] }}</a>
            </form>
        </div>
{% endblock %}