{% extends "layout.html.twig" %}

{% block title %}{{ strings['Filtrar Eventos'] }}{% endblock %}
{% block body %}
	<div class="row" style="clear:both;">
		<div class="container">
           <form method="POST" action="../Controllers/EVENTO_Controller.php?accion=filtrar">
                
                {% if userTipo == 1 %}
                <div class="form-group">
                    <label class="control-label" >{{ strings['username'] }}</label><br>
                    <input class="form-control" id="username" name="username" size="80" type="text">
                </div>
                {% else %}
                <div class="form-group">
                    <input type="hidden" class="form-control" id="username" name="username" size="80" type="text" value={{ user }}>
                </div>
                {% endif %}

                <div class="form-group">
                    <label class="control-label" >{{ strings['asuntoEvento']}}</label><br>
                    <input class="form-control" id="asuntoEvento" name="asuntoEvento" size="80" type="text"/>
                </div>

                <div class="form-group">
                    <label class="control-label" >{{ strings['nombreCalendario'] }}</label><br>
                    <input class="form-control" id="nombreCalendario" name="nombreCalendario" size="80" type="text"/>
                </div>

                <div class="form-group">
                    <label class="control-label" >{{ strings['nombreAsignatura'] }}</label><br>
                    <input class="form-control" id="nombreAsignatura" name="nombreAsignatura" size="80" type="text"/>
                </div>
				
                    
				
                <button type="submit" class="btn btn-primary">{{ strings['filtrar'] }}</button>
				<a class="form-link" href="{{ volver }}">{{ strings['Volver'] }}</a>
            </form>
        </div>
    </div>
{% endblock %}