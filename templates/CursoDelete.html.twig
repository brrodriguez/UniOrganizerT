{% extends "layout.html.twig" %}

{% block title %}Curso Delete{% endblock %}
{% block body %}
	 <div class="container" >
            <form method="POST" action="../Controllers/CURSO_Controller.php?accion=eliminar&amp;id={{ datos['idCurso'] }}">
                <div class="form-group" >
                    <label class="control-label" >{{ strings['Eliminar Curso'] }}</label><br>
                </div>
               
                
                <div class="form-group">
                    <label class="control-label" >{{ strings['nombreCurso'] }}</label><br>
                    <input class="form" id="nombreCurso" name="nombreCurso" size="25" type="text" readonly="true" value="{{ datos['nombreCurso'] }}">
                </div>             

                <div class="form-group">
                    <label class="control-label" >{{ strings['descripcionCurso'] }}</label><br>
                    <textarea rows="8" cols="70" id="descripcionCurso" name="descripcionCurso" readonly="true">{{ datos['descripcionCurso'] }}</textarea>
                </div>

                <br>
				
				<button type="submit" class="btn btn-primary">{{ strings['Borrar'] }}</button>
                <a class="form-link" href='{{ volver }}'>{{ strings['Volver'] }} </a>
            </form>

        </div>
{% endblock %}