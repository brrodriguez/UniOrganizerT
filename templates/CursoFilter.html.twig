{% extends "layout.html.twig" %}

{% block title %}Curso Filter{% endblock %}
{% block body %}
	<div class="container" >
           <form method="POST" action="../Controllers/CURSO_Controller.php?accion=filtrar">
                <div class="form-group" >
                    <label class="control-label" >{{ strings['Filtrar Cursos'] }}</label><br>
                </div>
				
                <div class="form-group">
                    <label class="control-label" >{{ strings['username'] }}</label><br>
                    <input class="form-control" id="username" name="username" size="80" type="text">
                </div>     
				
                <button type="submit" class="btn btn-primary">{{ strings['filtrar'] }}</button>
				<a class="form-link" href="{{ volver }}">{{ strings['Volver'] }}</a>
            </form>
        </div>
{% endblock %}