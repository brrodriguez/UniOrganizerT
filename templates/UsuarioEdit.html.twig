{% extends "layout.html.twig" %}

{% block title %}{{ strings['Editar Usuario'] }}{% endblock %}
{% block body %}
	<div class="row" style="clear:both;">
		<div class="container">
            <form  id="form" name="form" action='USUARIO_Controller.php?user=user'  method='post'   enctype="multipart/form-data">

                <div class="col-lg-4" style="float:left;">
                    <div class="form-group">
                        <label class="control-label" >{{ strings['username'] }}</label><br>
                        <input class="form" id="username" name="username" size="25" type="text" required="true" readonly="true" value="{{ valores['username'] }}">
                    </div>

                    <div class="form-group">
                        <label class="control-label" >{{ strings['password'] }}</label><br>
                        <input class="form" id="password" name="password" size="25" type="password" required="true" readonly='true' value="{{ valores['password'] }}"/>
                    </div>

                    <div class="form-group">
                        <label class="control-label" >{{ strings['newPassword'] }}</label><br>
                        <input class="form" id="newPassword" name="newPassword" size="25" type="password"/>
                    </div>
                
                    <div class="form-group">
                        <label class="control-label" >{{ strings['nombre'] }}</label><br>
                        <input class="form" id="nombre" name="nombre" size="50" type="text" required="true" value="{{ valores['nombre'] }}">
                    </div>
                </div>

                <div class="col-lg-4" style="float:right;">
                    <div class="form-group">
                        <label class="control-label" >{{ strings['apellidos'] }}</label><br>
                        <input class="form" id="apellidos" name="apellidos" size="50" type="text" required="true" value="{{ valores['apellidos'] }}">
                    </div>

                    <div class="form-group">
                        <label class="control-label" >{{ strings['dni'] }}</label><br>
                        <input class="form" id="dni" name="dni" size="9" type="text" required="true" value="{{ valores['dni'] }}">
                    </div>

                    <div class="form-group">
                        <label class="control-label" >{{ strings['fechaNac'] }}</label><br>
                        <input class="form" id="fechaNac" name="fechaNac" type="date" required="true" value="{{ valores['fechaNac'] }}">
                    </div>

                    <div class="form-group">
                        <label class="control-label" >{{ strings['email'] }}</label><br>
                        <input class="form" id="email" name="email" size="50" type="email" required="true" value="{{ valores['email'] }}">
                    </div>
                </div>
				
				<div class="form-group" style="clear:both;">
                    <input type="hidden" id="tipoUsuario" name="tipoUsuario" size="1" type="int" required="true" value="{{ valores['tipoUsuario'] }}">
                </div>
				

                <br>

                <button type='submit' class="btn btn-primary" onclick="return valida_envia_USUARIO()" name='accion' value="{{ strings['Modificar'] }}">{{ strings['Modificar'] }}</button>
                <a class="form-link" href='{{ volver }} '>{{ strings['Volver'] }} </a>
            </form>
        </div>
    </div>
{% endblock %}