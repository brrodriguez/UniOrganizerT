{% extends "layout.html.twig" %}

{% block title %}Alerta Edit{% endblock %}
{% block body %}
	<div class="container" >
            <form  id="form" name="form" action='ALERTA_Controller.php'  method='post'   enctype="multipart/form-data">
                <div class="form-group" >
                    <label class="control-label" >{{ strings['Modificar Alerta'] }}</label><br>
                </div>

                <div class="form-group">
                    <label class="control-label" >{{ strings['asuntoAlerta'] }}</label><br>
                    <input onchange="return valida_envia_asuntoAlerta()" class="form" id="asuntoAlerta" name="asuntoAlerta"  size="50" value="{{ alerta['asuntoAlerta'] }}">
                </div>

                <div class="form-group">
                    <label class="control-label" >{{ strings['descripcionAlerta'] }}</label><br>
                    <textarea onchange="return valida_envia_descripcionAlerta()" rows="8" cols="70" name="descripcionAlerta" >{{ alerta['descripcionAlerta'] }}</textarea>             
                </div>
				
				<div class="form-group">
                    <label class="control-label" >{{ strings['Fecha'] }}</label><br>
                     <input class="form" id="fecha" name="fecha"  type="date" value="{{ evento['dia'] }}">
                </div>
				
				<div class="form-group">
                    <label class="control-label" >{{ strings['Hora'] }}</label><br>
                    <input onchange="return valida_envia_hora()" class="form" id="hora" name="hora" type="time" required="true" value="{{ evento['horaInicio'] }}"/>
                </div>
				
				<div class="form-group">
                    <input type="hidden" class="form" id="idCalendarioHoras" name="idCalendarioHoras" size="25" type="text" readonly="true" value="{{ evento['idCalendarioHoras'] }}">
                </div>
                <div class="form-group">
                    <input type="hidden" class="form" id="username" name="username" size="25" type="text" readonly="true" value="{{ alerta['username'] }}">
                </div>
				<div class="form-group">
                    <input type="hidden" class="form" id="idAlerta" name="idAlerta" size="25" type="text" readonly="true" value="{{ alerta['idAlerta'] }}">
                </div>
        <br>

				<input type='submit' onclick="return valida_envia_ALERTA()" name='accion'  value="{{ strings['Modificar'] }}">
                <a class="form-link" href="{{ volver }}">{{ strings['Volver'] }}</a>
        </form>

    </div>
{% endblock %}