{% extends "layout.html.twig" %}

{% block title %}{{ strings['Crear Alerta'] }}{% endblock %}
{% block body %}
	<div class="row" style="clear:both;">
        <div class="container">
            <form  id="form" name="form" action='ALERTA_Controller.php'  method='post'   enctype="multipart/form-data">
                <div class="col-lg-4" style="float:left;">
                    <div class="form-group">
                        <label class="control-label" >{{ strings['asuntoAlerta'] }}</label><br>
                        <input  id="asuntoAlerta" name="asuntoAlerta" type="text" readonly="true" size="80" value="{{ datos['asuntoEvento'] }}">
                    </div>

                    <div class="form-group">
                        <label class="control-label" >{{ strings['descripcionAlerta'] }}</label><br>
                        <input  id="descripcionAlerta" name="descripcionAlerta" type="text" size="80" readonly="true" value="{{ datos['descripcionEvento'] }}">
                    </div>

                    <div class="form-group">
                        <input type="hidden" id="idEvento" name="idEvento" type="int" readonly="true" value="{{ datos['idEvento'] }}">
                    </div>
                    
                    <div class="form-group">
                        <input type="hidden" id="username" name="username" size="25" type="text" required="true" value='usuario'/>
                    </div>
                    
                    <h6 style="clear:both;"><b>{{ strings['Aviso'] }}</b></h6>
                    
                    <div class="form-group">
                        <label class="control-label" >{{ strings['Dias'] }}*</label><br>
                        <input class="form" id="dias" name="dias" type="text" required="true"/>
                    </div>
                </div>  
				
                <div class="col-lg-4" style="float:right;">
                    <div class="form-group">
                        <label class="control-label" >{{ strings['Fecha'] }}</label><br>
                        <input id="dia" name="dia" type="date" readonly="true" value="{{ datos['dia'] }}">
                    </div>

                    <div class="form-group">
                        <label class="control-label" >{{ strings['HoraInicio'] }}</label><br>
                        <input id="horaInicio" name="horaInicio" type="time" readonly="true" value="{{ datos['horaInicio'] }}">
                    </div>

                    <div class="form-group">
                        <label class="control-label" >{{ strings['HoraFin'] }}</label><br>
                        <input id="horaFin" name="horaFin" type="time" readonly="true" value="{{ datos['horaFin'] }}">
                    </div>
                </div>

                <div class="col-lg-4" style="float:left;clear:both;">
                    <button type="submit" class="btn btn-primary" name='accion' value="{{ strings['Crear'] }}">{{ strings['AÃ±adir Alerta'] }}</button>
                    <a class="form-link" href="{{ volver }}">{{ strings['Volver'] }}</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}