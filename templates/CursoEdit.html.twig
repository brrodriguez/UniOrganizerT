{% extends "layout.html.twig" %}

{% block title %}Curso Edit{% endblock %}
{% block body %}
	<div class="container">
			<form method="POST" action="../Controllers/CURSO_Controller.php?accion=modificar&amp;id={{ datos['idCurso'] }}">
				<div class="form-group row">
					<label for="example-text-input" class="col-2 col-form-label">{{ strings['nombreCurso'] }}</label>
					<div class="col-10">
						<input class="form-control" type="text" name="nombreCurso" value="{{ datos['nombreCurso'] }}" id="example-text-input" required>
					</div>
				</div>
                                

				<div class="form-group row">
					<label for="example-text-input" class="col-2 col-form-label">{{ strings['descripcionCurso'] }}</label>
					<div class="col-10">
						<input class="form-control" type="text" name="descripcionCurso" value="{{ datos['descripcionCurso'] }}" id="example-text-input" required>
					</div>
				</div>

				<button type="submit" class="btn btn-primary">{{ strings['savecurso'] }}</button>
			</form>
		</div>
{% endblock %}